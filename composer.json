{
    "name": "austinw/visual-exceptions",
    "description": "Visual Laravel exceptions delivered via iframe for single page applications",
    "keywords": [
        "visual-exceptions"
    ],
    "homepage": "https://github.com/AustinW/visual-exceptions",
    "license": "MIT",
    "authors": [
        {
            "name": "Austin White",
            "email": "austingym@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "orchestra/testbench": "^5.0",
        "phpunit/phpunit": "^9.0",
        "psalm/plugin-laravel": "^1.2",
        "vimeo/psalm": "^3.11"
    },
    "autoload": {
        "psr-4": {
            "AustinW\\VisualException\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AustinW\\VisualException\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "AustinW\\VisualException\\VisualExceptionServiceProvider"
            ],
            "aliases": {
                "VisualException": "AustinW\\VisualException\\VisualExceptionFacade"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
